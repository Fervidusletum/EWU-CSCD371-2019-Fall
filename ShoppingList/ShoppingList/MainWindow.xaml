<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Title="Shopping List" Height="600" Width="300" MinHeight="150" MinWidth="125"
        FontFamily="Lucida" FontSize="24">
    
    <Window.Resources>
        <local:ItemEditorVisibilityConverter x:Key="ItemEditorVisibilityConverter"/>

        <DataTemplate DataType="{x:Type local:Item}" x:Key="ShoppingItemTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Text}" Grid.Row="0"/>
                <Line Stretch="Fill" Stroke="LightGray" X2="1" Grid.Row="1"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="DimGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Background="WhiteSmoke"
                 ItemsSource="{Binding ShoppingItems}" SelectedItem="{Binding SelectedListItem}"
                 ItemTemplate="{StaticResource ShoppingItemTemplate}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <TextBox x:Name="ItemEditor" Grid.Row="1" Background="LightGray" BorderThickness="1.5" BorderBrush="DimGray"
                 Text="{Binding SelectedListItem.Text, UpdateSourceTrigger=PropertyChanged}"
                 Visibility="{Binding SelectedListItem, Converter={StaticResource ItemEditorVisibilityConverter}}">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding DeselectCommand}"/>
                <KeyBinding Key="Tab" Command="{Binding DeselectCommand}"/>
            </TextBox.InputBindings>
        </TextBox>

        <Button Grid.Row="2" Background="LightGray" Content="Add Item"
                Command="{Binding AddItemCommand}" Click="FocusItemEditor"/>
    </Grid>
</Window>
